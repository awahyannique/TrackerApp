<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yanniquepc.demoapp.MainActivity"
    android:id="@+id/LoginButton"
    android:backgroundTint="@color/bright_foreground_disabled_material_dark">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/employeeId_editText"
        android:hint="Employee ID"
        android:autoText="false"
        android:background="@color/dim_foreground_disabled_material_dark"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_editText"
        android:hint="Password"
        android:autoText="false"
        android:background="@color/dim_foreground_disabled_material_dark"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/employeeId_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:id="@+id/logIn_button"
        android:background="@android:color/holo_green_dark"
        android:layout_below="@+id/password_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp" />




</RelativeLayout>
