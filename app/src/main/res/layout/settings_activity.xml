<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".settings_activity">

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:text="Settings"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/employeeName"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/employeeID"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="left"
        android:layout_marginTop="183dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:text="Name:"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/employeeName_editText"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/employeeName"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="left"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_toEndOf="@+id/employeeName"
        android:text="NA"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/employeeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="left"
        android:layout_marginStart="50dp"
        android:layout_marginTop="129dp"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:text="Employee ID:"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/employeeId_editText"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/employeeID"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="left"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_toEndOf="@+id/employeeName"
        android:text="NA"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

</RelativeLayout>